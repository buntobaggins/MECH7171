{
    "terminal.integrated.profiles.windows": {
      "CMD": {
        "path": "C:\\Windows\\System32\\cmd.exe",
        "args": ["/K", "chcp 437"]
      },
      "PowerShell": {
        "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
        "args": ["-NoExit", "-Command", "chcp 437"]
      }
    },
    "terminal.integrated.fontFamily": "Cascadia Code, Consolas, 'Courier New', monospace",

    "update.mode"                            : "none",
    "editor.tabSize"                         : 3,
    "editor.useTabStops"                     : false,
    "editor.insertSpaces"                    : true,
    "editor.renderWhitespace"                : "all",
    "files.trimTrailingWhitespace"           : true,
    "files.associations": {
      "*.tcc"                                : "cpp",
      "*.ipp"                                : "cpp",
      //"*.txt"                                : "iso88591"
    },
    "files.encoding"                         : "iso88591",
    "C_Cpp.default.configurationProvider"    : "ms-vscode.cmake-tools",
    "C_Cpp.default.intelliSenseMode"         : "windows-msvc-x64",
    "C_Cpp.default.cppStandard"              : "c++20",
    "C_Cpp.default.cStandard"                : "c17",

    "cmake.configureOnEdit"                  : true,
    "cmake.configureOnOpen"                  : true,
    "cmake.automaticReconfigure"             : true,
    "cmake.deleteBuildDirOnCleanConfigure"   : true,
    "cmake.enableAutomaticKitScan"           : true,
    "cmake.useVsDeveloperEnvironment"        : "auto",
    "cmake.generator"                        : "Ninja",
    "cmake.buildDirectory"                   : "${workspaceFolder}/_build",
    "cmake.launchBehavior"                   : "breakAndReuseTerminal",
    "cmake.debugConfig": {
      "console"                              : "integratedTerminal",
      "cwd"                                  : "${workspaceFolder}"
    }
  }